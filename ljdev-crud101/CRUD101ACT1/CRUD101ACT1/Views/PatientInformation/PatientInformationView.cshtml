@* HTML markup for the modal *@
<div class="modal fade" id="apModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="aPModal">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This is a simple modal dialog. You can add any content here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("PatientInformationView", "PatientInformation", FormMethod.Post, new { id = "PatientInfoForm" }))
{

    <p>
        @Html.ActionLink("Create New", "AddPatientView")
    </p>
    <p>
        @Html.ActionLink("Drug List", "DrugView")
    </p>

